{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "test": "lerna run test --stream",
    "build": "lerna run build",
    "format": "prettier --write \"packages/*/src/*.js\"",
    "lint": "eslint \"packages/*/src/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "packages/*/src/*.js": [
        "prettier --write",
        "eslint",
        "git add"
      ],
      "examples/*/src/*.js": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "husky": "^1.1.4",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "prettier": "1.15.2"
  },
  "dependencies": {}
}
